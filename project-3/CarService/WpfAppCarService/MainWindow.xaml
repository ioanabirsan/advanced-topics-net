<Window x:Class="WpfAppCarService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCarService"
        mc:Ignorable="d"
        Title="Car Service"
        FontSize="15"
        Icon="operation.ico"
        Height="800" Width="1200"
        Background="AliceBlue">

    <Border Padding="20" Background="AliceBlue">

        <TabControl Name="MainControl">

            <TabItem Header="Customers" Padding="10" Background="CornflowerBlue" FontWeight="Bold">
                <Border Padding="40">

                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button x:Name="SearchCustomerButton"
                                    Click="SearchCustomerButton_OnClick"
                                    Padding="10" Margin="0 0 50 0"
                                    Grid.Column="0" Content="Search"
                                    Background="CornflowerBlue" FontWeight="DemiBold" />
                            <Button x:Name="AddCustomerButton"
                                    Padding="10"
                                    Grid.Column="1" Content="Add"
                                    Background="CornflowerBlue" FontWeight="DemiBold" />
                            <Button x:Name="ViewAllCustomersButton"
                                    Click="ViewAllCustomersButton_OnClick"
                                    Padding="10" Margin="50 0 0 0"
                                    Grid.Column="2" Content="View all"
                                    Background="CornflowerBlue" FontWeight="DemiBold" />
                        </Grid>

                        <DataGrid Name="CustomersDataGrid"
                                  ItemsSource="{Binding}"
                                  FontWeight="Normal"
                                  Margin="0 30 0 30"
                                  Padding="20"
                                  VerticalScrollBarVisibility="Visible"
                                  Visibility="Hidden"
                                  AlternatingRowBackground="AliceBlue" BorderThickness="2" />

                    </StackPanel>

                </Border>
            </TabItem>

            <TabItem Header="Orders" Padding="10" Background="DeepSkyBlue" FontWeight="Bold">
                <Border Padding="40">

                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button x:Name="AddOrderButton"
                                    Click="AddOrderButton_OnClick"
                                    Padding="10" Margin="0 0 50 0"
                                    Grid.Column="0" Content="Add"
                                    Background="DeepSkyBlue" FontWeight="DemiBold" />
                            <Button x:Name="ViewAllOrdersButton"
                                    Click="ViewAllOrdersButton_OnClick"
                                    Padding="10" Margin="50 0 0 0"
                                    Grid.Column="1" Content="View all"
                                    Background="DeepSkyBlue" FontWeight="DemiBold" />
                        </Grid>

                        <DataGrid Name="OrdersDataGrid"
                                  ItemsSource="{Binding}"
                                  FontWeight="Normal"
                                  Margin="0 30 0 30"
                                  Padding="20"
                                  VerticalScrollBarVisibility="Visible"
                                  Visibility="Hidden"
                                  AlternatingRowBackground="AliceBlue" BorderThickness="2" />

                    </StackPanel>

                </Border>
            </TabItem>

            <TabItem Header="Chassis" Padding="10" Background="DarkTurquoise" FontWeight="Bold">
                <Label>Chassis</Label>
            </TabItem>

            <TabItem Header="Details" Padding="10" Background="LightBlue" FontWeight="Bold">
                <Label>Details</Label>
            </TabItem>

        </TabControl>
    </Border>

</Window>