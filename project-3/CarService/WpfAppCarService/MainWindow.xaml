<Window x:Class="WpfAppCarService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCarService"
        mc:Ignorable="d"
        Title="Car Service"
        FontSize="15"
        Icon="operation.ico"
        Height="800" Width="1200"
        Background="AliceBlue">

    <Border Padding="20" Background="AliceBlue">

        <TabControl Name="MainControl">

            <!-- Customers -->
            <TabItem Header="Customers" Name="CustomersTabItem" Loaded="CustomersTabItem_OnLoaded"
                     Padding="40 10 40 10" Width="200" Background="CornflowerBlue" FontWeight="Bold">
                <Border Padding="30">

                    <StackPanel Background="AliceBlue">

                        <StackPanel Orientation="Horizontal">
                            <Button Name="SearchCustomerButton"
                                    Click="SearchCustomerButton_OnClick"
                                    Padding="10" Margin="20 20 10 10"
                                    Content="Search" Background="CornflowerBlue" FontWeight="DemiBold" Width="100" />
                            <Button Name="BackCustomerButton"
                                    Click="BackCustomerButton_OnClick"
                                    Padding="10" Margin="0 20 0 10"
                                    Content="Back" Background="CornflowerBlue" FontWeight="DemiBold" Width="100" />
                        </StackPanel>

                        <StackPanel Name="ManageCustomersStackPanel">

                            <Separator Margin="20 10 20 10" BorderBrush="CornflowerBlue" BorderThickness="0 2 0 0" />
                            <TextBlock FontSize="16" FontWeight="Bold" Padding="3" Margin="0 0 20 10">New customers</TextBlock>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">Name</TextBlock>
                                    <TextBox x:Name="AddCustomerNameTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="AddCustomerNameTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10" />
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">First Name</TextBlock>
                                    <TextBox x:Name="AddCustomerFirstNameTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="AddCustomerFirstNameTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10" />
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">Address</TextBlock>
                                    <TextBox x:Name="AddCustomerAddressTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="AddCustomerAddressTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10" />
                                </StackPanel>
                                <StackPanel Grid.Column="3">
                                    <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">City</TextBlock>
                                    <TextBox x:Name="AddCustomerCityTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="AddCustomerCityTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10" />
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">County</TextBlock>
                                    <TextBox x:Name="AddCustomerCountyTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="AddCustomerCountyTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10" />
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">Phone Number</TextBlock>
                                    <TextBox x:Name="AddCustomerPhoneNumberTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="AddCustomerPhoneNumberTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10" />
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <CheckBox x:Name="AddCustomerEmailCheckbox"
                                              VerticalContentAlignment="Center"
                                              Click="AddCustomerEmailCheckbox_OnClick"
                                              FontSize="12" Padding="3" Margin="20 0 20 0">
                                        Email
                                    </CheckBox>
                                    <TextBox x:Name="AddCustomerEmailTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="AddCustomerEmailTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 20"
                                             IsEnabled="False" />
                                </StackPanel>
                            </Grid>

                            <StackPanel Orientation="Horizontal">
                                <Button Name="AddNewCustomerButton"
                                        DockPanel.Dock="Bottom"
                                        Content="Add"
                                        Click="AddNewCustomerButton_OnClick"
                                        Background="CornflowerBlue"
                                        IsEnabled="False"
                                        Padding="3" Margin="20 0 10 10" Width="80" />
                                <Button Name="NewCustomerButton"
                                        DockPanel.Dock="Bottom"
                                        Click="NewCustomerButton_OnClick"
                                        Content="New" Margin="0 0 0 10"
                                        Background="CornflowerBlue" Padding="3" Width="80" />
                                <TextBlock Name="AddCustomerDisplayInfoTextBlock"
                                           FontSize="12" Padding="3" FontWeight="Bold" />
                            </StackPanel>

                            <Separator Margin="20 10 20 10" BorderBrush="CornflowerBlue" BorderThickness="0 2 0 0" />
                            <TextBlock FontSize="16" FontWeight="Bold" Padding="3" Margin="0 0 20 10">View All</TextBlock>

                            <StackPanel>
                                <DataGrid x:Name="CustomersDataGrid"
                                          ItemsSource="{Binding}"
                                          FontWeight="Normal"
                                          Margin="20 10 20 20"
                                          Padding="10" ColumnWidth="*" Height="250"
                                          VerticalScrollBarVisibility="Visible"
                                          AlternatingRowBackground="AliceBlue" BorderThickness="2" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="UpdateCustomersButton"
                                        Click="UpdateCustomersButton_OnClick"
                                        Padding="3" Margin="20 0 20 10" Height="30" Width="80"
                                        Content="Update"
                                        Background="CornflowerBlue" FontWeight="DemiBold" />

                                <Button x:Name="DeleteCustomersButton"
                                        Click="DeleteCustomersButton_OnClick"
                                        Padding="3" Margin="0 0 0 10" Height="30" Width="80"
                                        Content="Delete"
                                        Background="CornflowerBlue" FontWeight="DemiBold" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Name="SearchCustomersStackPanel">

                            <Separator Margin="20 10 20 10" BorderBrush="CornflowerBlue" BorderThickness="0 2 0 0" />

                            <Grid Name="SearchCustomersInputGrid"
                                  Background="AliceBlue"
                                  Margin="0 10 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">Name</TextBlock>
                                    <TextBox Name="SearchCustomerNameTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="SearchCustomerNameTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 10 0" />
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="0 0 20 0">First name</TextBlock>
                                    <TextBox x:Name="SearchCustomerFirstNameTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="SearchCustomerFirstNameTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="0 0 10 0" />
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="0 0 20 0">Phone number</TextBlock>
                                    <TextBox Name="SearchCustomerPhoneNumberTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="SearchCustomerPhoneNumberTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="0 0 10 0" />
                                </StackPanel>

                                <StackPanel Grid.Column="3">
                                    <CheckBox Name="SearchCustomerEmailCheckbox"
                                              VerticalContentAlignment="Center"
                                              Click="SearchCustomerEmailCheckbox_OnClick"
                                              FontSize="12" Padding="3" Margin="0 0 20 0">
                                        Email
                                    </CheckBox>
                                    <TextBox Name="SearchCustomerEmailTextBox"
                                             VerticalContentAlignment="Center" Margin="0 0 20 0"
                                             PreviewTextInput="SearchCustomerEmailTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" IsEnabled="False" />
                                </StackPanel>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Margin="0 20">
                                <Button Name="FindCustomerButton"
                                        Content="Find"
                                        Click="FindCustomerButton_OnClick"
                                        Background="CornflowerBlue"
                                        IsEnabled="False"
                                        Width="80" Padding="3" Margin="20 0 10 0" />
                                <Button Name="FindNewCustomerButton"
                                        Click="FindNewCustomerButton_OnClick"
                                        Content="New"
                                        Background="CornflowerBlue"
                                        Width="80" Padding="3" Margin="0 0 0 0" />
                                <TextBlock Name="SearchDisplayInfoTextBlock"
                                           FontSize="12" Padding="3" FontWeight="Bold" />
                            </StackPanel>

                            <DataGrid Name="SearchCustomerDataGrid"
                                      ItemsSource="{Binding}"
                                      FontWeight="Normal"
                                      Margin="200 10 200 10" Padding="10" ColumnWidth="*"
                                      VerticalScrollBarVisibility="Visible" Height="150"
                                      AlternatingRowBackground="AliceBlue" BorderThickness="2" />

                            <Separator Margin="20 10 20 10" BorderBrush="CornflowerBlue" BorderThickness="0 2 0 0" />
                            <TextBlock FontSize="16" FontWeight="Bold" Padding="3" Margin="0 0 20 10">Add Customer Car</TextBlock>

                            <Grid Name="AddCustomerCarInputGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="12" FontWeight="Bold" Padding="5" Margin="20 0 20 0">Number</TextBlock>
                                    <TextBox DockPanel.Dock="Top" x:Name="AddCustomerCarAutoNumberTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="AddCustomerCarAutoNumberTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 10 0" />

                                    <TextBlock FontSize="12" FontWeight="Bold" Padding="5" Margin="20 10 0 0">Chassis series</TextBlock>
                                    <TextBox DockPanel.Dock="Top" x:Name="AddCustomerCarChassisSeriesTextBox"
                                             VerticalContentAlignment="Center"
                                             PreviewTextInput="AddCustomerCarChassisSeriesTextBox_OnPreviewTextInput"
                                             FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 10 0" />
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <DataGrid Name="DisplayChassisDataGrid"
                                              ItemsSource="{Binding}"
                                              FontWeight="Normal"
                                              Margin="200 20 200 20"
                                              Padding="10" ColumnWidth="*"
                                              VerticalScrollBarVisibility="Visible" Height="150"
                                              AlternatingRowBackground="AliceBlue" BorderThickness="2" />
                                </StackPanel>
                            </Grid>

                            <StackPanel Name="AddCustomerCarButtonsStackPanel"
                                        Background="AliceBlue"
                                        Orientation="Horizontal">
                                <Button Name="AddCustomerCarButton"
                                        DockPanel.Dock="Bottom"
                                        Content="Add" Width="80"
                                        Click="AddCustomerCarButton_OnClick"
                                        Background="CornflowerBlue"
                                        IsEnabled="False"
                                        Padding="3" Margin="20 0 10 0" />
                                <Button Name="AddNewCustomerCarButton"
                                        DockPanel.Dock="Bottom"
                                        Click="AddNewCustomerCarButton_OnClick"
                                        Content="New" Width="80"
                                        Background="CornflowerBlue"
                                        Padding="3" Margin="0 0 0 0" />
                                <TextBlock Name="AddCarDisplayInfoTextBlock"
                                           FontSize="12" Padding="3" FontWeight="Bold" />
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>

                </Border>
            </TabItem>

            <TabItem Header="Orders" Name="OrdersTabItem" Loaded="OrdersTabItem_OnLoaded"
                     Padding="40 10 40 10" Width="200" Background="DeepSkyBlue" FontWeight="Bold">
                <Border Padding="40">

                    <StackPanel Background="AliceBlue">

                        <StackPanel Orientation="Horizontal">
                            <Button Name="ViewAllOrdersButton"
                                    Click="ViewAllOrdersButton_OnClick"
                                    Padding="10" Margin="20 20 10 10"
                                    Content="View all" Background="DeepSkyBlue" FontWeight="DemiBold" Width="100" />
                            <Button Name="AddOrderButton"
                                    Click="AddOrderButton_OnClick"
                                    Padding="10" Margin="0 20 10 10"
                                    Content="Back" Background="DeepSkyBlue" FontWeight="DemiBold" Width="100" />
                        </StackPanel>

                        <StackPanel Name="ManageOrdersStackPanel">

                            <Separator Margin="20 10 20 10" BorderBrush="DeepSkyBlue" BorderThickness="0 2 0 0" />
                            <TextBlock FontSize="16" FontWeight="Bold" Padding="3" Margin="0 0 20 10">Add Order</TextBlock>

                            <ScrollViewer Name="AddOrderScrollViewer" VerticalScrollBarVisibility="Visible" Height="550">
                                <StackPanel Name="AddOrderStackPanel" Loaded="AddOrderStackPanel_OnLoaded">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <DataGrid Name="DisplayOrderCarsDataGrid"
                                                  Grid.Column="0"
                                                  ItemsSource="{Binding}"
                                                  FontWeight="Normal" Height="150"
                                                  Margin="20 20 20 20" Padding="10" ColumnWidth="*"
                                                  VerticalScrollBarVisibility="Visible"
                                                  AlternatingRowBackground="AliceBlue" BorderThickness="2" />

                                        <StackPanel Grid.Column="1">
                                            <TextBlock FontSize="12" FontWeight="Bold" Padding="5" Margin="20 20 0 5">Start Date</TextBlock>
                                            <DatePicker Height="25" HorizontalAlignment="Left"
                                                        Name="OrderStartDatePicker"
                                                        VerticalAlignment="Top" Width="230" Margin="20 20 0 20" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock FontSize="12" FontWeight="Bold" Padding="5" Margin="20 20 0 5">End Date</TextBlock>
                                            <DatePicker Height="25" HorizontalAlignment="Left"
                                                        Name="OrderEndDatePicker"
                                                        VerticalAlignment="Top" Width="230" Margin="20 20 0 20" />
                                        </StackPanel>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Name="InServiceCheckbox"
                                                  Grid.Column="0"
                                                  VerticalContentAlignment="Center"
                                                  Click="InServiceCheckbox_OnClick"
                                                  FontSize="12" Padding="5" Margin="20 0 20 40" Content="In service" />

                                        <StackPanel Grid.Column="1">
                                            <TextBlock FontSize="12" FontWeight="Bold" Padding="5" Margin="20 0 20 5">Km</TextBlock>
                                            <TextBox DockPanel.Dock="Top" x:Name="AddOrderKmTextBox"
                                                     VerticalContentAlignment="Center"
                                                     PreviewTextInput="AddOrderKmTextBox_OnPreviewTextInput"
                                                     FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 20" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock FontSize="12" FontWeight="Bold" Padding="5" Margin="20 0 20 5">Description</TextBlock>
                                            <TextBox DockPanel.Dock="Top" x:Name="AddOrderDescriptionTextBox"
                                                     VerticalContentAlignment="Center"
                                                     PreviewTextInput="AddOrderDescriptionTextBox_OnPreviewTextInput"
                                                     FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 20" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="3">
                                            <TextBlock FontSize="12" FontWeight="Bold" Padding="5" Margin="20 0 20 5">State</TextBlock>
                                            <ComboBox Name="AddOrderStateCombobox" Margin="20 0 20 20" Padding="5"
                                                      FontWeight="Normal"
                                                      FontSize="12">
                                                <ComboBoxItem>Executed</ComboBoxItem>
                                                <ComboBoxItem IsSelected="True">None</ComboBoxItem>
                                                <ComboBoxItem>Rejected</ComboBoxItem>
                                                <ComboBoxItem>Waiting</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>

                                        <Button Name="AddNewOrderButton"
                                                Click="AddNewOrderButton_OnClick"
                                                Padding="3" Margin="20 0 20 20" Height="30" Width="80"
                                                Grid.Column="4" Content="Add"
                                                Background="DeepSkyBlue" FontWeight="DemiBold" />
                                    </Grid>

                                    <Separator Margin="20 10 20 10" BorderBrush="DeepSkyBlue" BorderThickness="0 2 0 0" />
                                    <TextBlock FontSize="16" FontWeight="Bold" Padding="3" Margin="0 0 20 10">Order Details</TextBlock>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 5">Materials</TextBlock>
                                            <DataGrid Name="DisplayOrderMaterialsDataGrid" SelectionMode="Extended"
                                                      ItemsSource="{Binding}"
                                                      SelectionChanged="DisplayOrderMaterialsDataGrid_OnSelectionChanged"
                                                      FontWeight="Normal" Height="200"
                                                      Margin="20 0 20 20" Padding="10" ColumnWidth="*"
                                                      VerticalScrollBarVisibility="Visible"
                                                      AlternatingRowBackground="AliceBlue" BorderThickness="2" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 5">Mechanics</TextBlock>
                                            <DataGrid Name="DisplayOrderMechanicsDataGrid" SelectionMode="Extended"
                                                      ItemsSource="{Binding}"
                                                      SelectionChanged="DisplayOrderMechanicsDataGrid_OnSelectionChanged"
                                                      FontWeight="Normal" Height="200"
                                                      Margin="20 0 20 20" Padding="10" ColumnWidth="*"
                                                      VerticalScrollBarVisibility="Visible"
                                                      AlternatingRowBackground="AliceBlue" BorderThickness="2" />
                                        </StackPanel>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 5">Operations</TextBlock>
                                            <DataGrid Name="DisplayOrderOperationsDataGrid" SelectionMode="Extended"
                                                      ItemsSource="{Binding}"
                                                      SelectionChanged="DisplayOrderOperationsDataGrid_OnSelectionChanged"
                                                      FontWeight="Normal" Height="200"
                                                      Margin="20 0 20 20" Padding="10" ColumnWidth="*"
                                                      VerticalScrollBarVisibility="Visible"
                                                      AlternatingRowBackground="AliceBlue" BorderThickness="2" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 5">Images</TextBlock>
                                            <DataGrid Name="DisplayOrderImagesDataGrid" SelectionMode="Extended"
                                                      ItemsSource="{Binding}"
                                                      SelectionChanged="DisplayOrderImagesDataGrid_OnSelectionChanged"
                                                      FontWeight="Normal" Height="200"
                                                      Margin="20 0 20 20" Padding="10" ColumnWidth="*"
                                                      VerticalScrollBarVisibility="Visible" 
                                                      AlternatingRowBackground="AliceBlue" BorderThickness="2" />
                                        </StackPanel>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 5">Orders</TextBlock>
                                            <DataGrid Name="DisplayOrderOrdersDataGrid" SelectionMode="Extended"
                                                      ItemsSource="{Binding}"
                                                      SelectionChanged="DisplayOrderOrdersDataGrid_OnSelectionChanged"
                                                      FontWeight="Normal"
                                                      Margin="20 0 20 20" Padding="10" ColumnWidth="*"
                                                      VerticalScrollBarVisibility="Visible" Height="200"
                                                      AlternatingRowBackground="AliceBlue" BorderThickness="2" />
                                        </StackPanel>

                                        <Button x:Name="AddOrderDetailsButton"
                                                Click="AddOrderDetailsButton_OnClick"
                                                Padding="3" Margin="0 0 20 20" Height="30" Width="80"
                                                Grid.Column="1" Content="Add"
                                                Background="DeepSkyBlue" FontWeight="DemiBold" />
                                    </Grid>
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>

                        <StackPanel Name="DisplayOrdersStackPanel">
                            <StackPanel>
                                <DataGrid Name="OrdersDataGrid"
                                          ItemsSource="{Binding}"
                                          FontWeight="Normal"
                                          Margin="20 50 20 20" Padding="20" ColumnWidth="*" Height="450"
                                          VerticalScrollBarVisibility="Visible"
                                          AlternatingRowBackground="AliceBlue" BorderThickness="2" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="UpdateOrdersButton"
                                        Click="UpdateOrdersButton_OnClick"
                                        Padding="3" Margin="20 0 20 10" Height="30" Width="80"
                                        Content="Update"
                                        Background="DeepSkyBlue" FontWeight="DemiBold" />

                                <Button x:Name="DeleteOrdersButton"
                                        Click="DeleteOrdersButton_OnClick"
                                        Padding="3" Margin="0 0 0 10" Height="30" Width="80"
                                        Content="Delete"
                                        Background="DeepSkyBlue" FontWeight="DemiBold" />
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </Border>
            </TabItem>

            <TabItem Header="Chassis" Name="ChassisTabItem" Loaded="ChassisTabItem_OnLoaded"
                     Padding="40 10 40 10" Width="200" Background="DarkTurquoise" FontWeight="Bold">
                <Border Padding="20">

                    <StackPanel Background="AliceBlue">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="12" FontWeight="Bold" Padding="5" Margin="20 20 20 5">Code</TextBlock>
                                <TextBox DockPanel.Dock="Top" x:Name="AddChassisCodeTextBox"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="AddChassisCodeTextBox_OnPreviewTextInput"
                                         FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 20" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock FontSize="12" FontWeight="Bold" Padding="5" Margin="20 20 20 5">Name</TextBlock>
                                <TextBox DockPanel.Dock="Top" x:Name="AddChassisNameTextBox"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="AddChassisNameTextBox_OnPreviewTextInput"
                                         FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 20" />
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="AddNewChassisButton"
                                    Click="AddNewChassisButton_OnClick"
                                    Padding="3" Margin="20 10 10 20" Height="30" Width="80"
                                    Content="Add"
                                    Background="DarkTurquoise" FontWeight="DemiBold" />

                            <Button x:Name="NewChassisButton"
                                    Click="NewChassisButton_OnClick"
                                    Padding="3" Margin="0 10 10 20" Height="30" Width="80"
                                    Content="New"
                                    Background="DarkTurquoise" FontWeight="DemiBold" />
                            <TextBlock Name="AddChassisDisplayInfoTextBlock"
                                       FontSize="12" Padding="5" FontWeight="Bold" Margin="0 10 10 20" />
                        </StackPanel>

                        <Separator Margin="20 10 20 10" BorderBrush="DarkTurquoise" BorderThickness="0 2 0 0" />
                        <TextBlock FontSize="16" FontWeight="Bold" Padding="3" Margin="0 0 20 10">Chassis</TextBlock>

                        <StackPanel>
                            <DataGrid Name="ChassisDataGrid"
                                      ItemsSource="{Binding}"
                                      FontWeight="Normal"
                                      Margin="200 20 200 20" Padding="20" ColumnWidth="*" Height="400"
                                      VerticalScrollBarVisibility="Visible"
                                      AlternatingRowBackground="AliceBlue" BorderThickness="2" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="UpdateChassisButton"
                                    Click="UpdateChassisButton_OnClick"
                                    Padding="3" Margin="200 0 20 10" Height="30" Width="80"
                                    Content="Update"
                                    Background="DarkTurquoise" FontWeight="DemiBold" />

                            <Button x:Name="DeleteChassisButton"
                                    Click="DeleteChassisButton_OnClick"
                                    Padding="3" Margin="0 0 0 10" Height="30" Width="80"
                                    Content="Delete"
                                    Background="DarkTurquoise" FontWeight="DemiBold" />
                        </StackPanel>

                    </StackPanel>
                </Border>
            </TabItem>

            <TabItem Header="Details" Padding="40 10 40 10" Width="200" Background="LightBlue" FontWeight="Bold">
                <Border Padding="20">
                    <StackPanel Name="ManageDetailsStackPanel">
                        <TabControl Name="ManageDetailsTabControl" Margin="100 50 100 50" Height="650">

                            <TabItem Header="Images" Padding="20 10 20 10" Width="150" Background="LightBlue"
                                     FontWeight="Bold" Name="ImagesTabItem" Loaded="ImagesTabItem_OnLoaded">
