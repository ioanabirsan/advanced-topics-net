<Window x:Class="WpfAppCarService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCarService"
        mc:Ignorable="d"
        Title="Car Service"
        FontSize="15"
        Icon="operation.ico"
        Height="800" Width="1200"
        Background="AliceBlue">

    <Border Padding="20" Background="AliceBlue">

        <TabControl Name="MainControl">

            <!-- Customers -->
            <TabItem Header="Customers" Padding="40 10 40 10" Width="200" Background="CornflowerBlue" FontWeight="Bold">
                <Border Padding="30">

                    <StackPanel>
                        <Grid x:Name="CustomersGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Customers buttons -->
                            <Button x:Name="SearchCustomerButton"
                                    Click="SearchCustomerButton_OnClick"
                                    Padding="10" Margin="0 0 100 0"
                                    Grid.Column="0" Content="Search"
                                    Background="CornflowerBlue" FontWeight="DemiBold" />
                            <Button x:Name="AddCustomerButton"
                                    Click="AddCustomerButton_OnClick"
                                    Padding="10" Margin="50 0 50 0"
                                    Grid.Column="1" Content="Add"
                                    Background="CornflowerBlue" FontWeight="DemiBold" />
                            <Button x:Name="ViewAllCustomersButton"
                                    Click="ViewAllCustomersButton_OnClick"
                                    Padding="10" Margin="100 0 0 0"
                                    Grid.Column="2" Content="View all"
                                    Background="CornflowerBlue" FontWeight="DemiBold" />
                        </Grid>

                        <!-- Display all customers -->

                        <DataGrid x:Name="CustomersDataGrid"
                                  ItemsSource="{Binding}"
                                  FontWeight="Normal"
                                  Margin="0 50 0 50"
                                  Padding="10" ColumnWidth="*" Height="500"
                                  VerticalScrollBarVisibility="Visible"
                                  Visibility="Hidden"
                                  AlternatingRowBackground="AliceBlue" BorderThickness="2" />

                        <!-- Add new customer -->

                        <StackPanel x:Name="AddCustomerStackPanel"
                                    Visibility="Hidden"
                                    Margin="300 50 300 20"
                                    Background="AliceBlue">
                            <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 20 20 0">Name</TextBlock>
                            <TextBox x:Name="AddCustomerNameTextBox"
                                     VerticalContentAlignment="Center"
                                     PreviewTextInput="AddCustomerNameTextBox_OnPreviewTextInput"
                                     FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10"/>

                            <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">First Name</TextBlock>
                            <TextBox x:Name="AddCustomerFirstNameTextBox"
                                     VerticalContentAlignment="Center"
                                     PreviewTextInput="AddCustomerFirstNameTextBox_OnPreviewTextInput"
                                     FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10"/>

                            <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">Address</TextBlock>
                            <TextBox x:Name="AddCustomerAddressTextBox"
                                     VerticalContentAlignment="Center"
                                     PreviewTextInput="AddCustomerAddressTextBox_OnPreviewTextInput"
                                     FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10"/>

                            <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">City</TextBlock>
                            <TextBox x:Name="AddCustomerCityTextBox"
                                     VerticalContentAlignment="Center"
                                     PreviewTextInput="AddCustomerCityTextBox_OnPreviewTextInput"
                                     FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10"/>

                            <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">County</TextBlock>
                            <TextBox x:Name="AddCustomerCountyTextBox"
                                     VerticalContentAlignment="Center"
                                     PreviewTextInput="AddCustomerCountyTextBox_OnPreviewTextInput"
                                     FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10"/>

                            <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">Phone Number</TextBlock>
                            <TextBox x:Name="AddCustomerPhoneNumberTextBox"
                                     VerticalContentAlignment="Center"
                                     PreviewTextInput="AddCustomerPhoneNumberTextBox_OnPreviewTextInput"
                                     FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 10"/>

                            <CheckBox x:Name="AddCustomerEmailCheckbox"
                                      VerticalContentAlignment="Center"
                                      Click="AddCustomerEmailCheckbox_OnClick"
                                      FontSize="12" Padding="3" Margin="20 0 20 0">
                                Email
                            </CheckBox>
                            <TextBox x:Name="AddCustomerEmailTextBox"
                                     VerticalContentAlignment="Center"
                                     PreviewTextInput="AddCustomerEmailTextBox_OnPreviewTextInput"
                                     FontSize="12" FontWeight="Normal" Padding="5" Margin="20 0 20 20" IsEnabled="False" />
                        </StackPanel>

                        <!-- Add Customer and New Customer Buttons -->
                        <StackPanel Name="AddCustomerButtonsStackPanel"
                                    Background="AliceBlue"
                                    Orientation="Horizontal" 
                                    Margin="300 0 300 0">
                            <Button Name="AddNewCustomerButton"
                                    DockPanel.Dock="Bottom"
                                    Content="Add"
                                    Click="AddNewCustomerButton_OnClick"
                                    Background="CornflowerBlue"
                                    IsEnabled="False"
                                    Padding="3" Margin="20 0 5 0" />
                            <Button Name="NewCustomerButton"
                                    DockPanel.Dock="Bottom"
                                    Click="NewCustomerButton_OnClick"
                                    Content="New"
                                    Background="CornflowerBlue"
                                    Padding="3" />
                            <TextBlock Name="AddCustomerDisplayInfoTextBlock"
                                       FontSize="12" Padding="3" FontWeight="Bold" />
                        </StackPanel>

                        <!-- Search customer -->

                        <Grid x:Name="SearchCustomersInputGrid"
                              Visibility="Hidden"
                              Background="AliceBlue"
                              Margin="0 40 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Name -->
                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="12" FontWeight="Bold" Padding="3">Name</TextBlock>
                                <TextBox x:Name="SearchCustomerNameTextBox"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="SearchCustomerNameTextBox_OnPreviewTextInput"
                                         FontSize="12" FontWeight="Normal" Padding="2" Margin="0 0 5 0" />
                            </StackPanel>

                            <!-- First Name -->
                            <StackPanel Grid.Column="1">
                                <TextBlock FontSize="12" FontWeight="Bold" Padding="3">First name</TextBlock>
                                <TextBox x:Name="SearchCustomerFirstNameTextBox"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="SearchCustomerFirstNameTextBox_OnPreviewTextInput"
                                         FontSize="12" FontWeight="Normal" Padding="2" Margin="0 0 5 0" />
                            </StackPanel>

                            <!-- Phone Number -->
                            <StackPanel Grid.Column="2">
                                <TextBlock FontSize="12" FontWeight="Bold" Padding="3">Phone number</TextBlock>
                                <TextBox x:Name="SearchCustomerPhoneNumberTextBox"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="SearchCustomerPhoneNumberTextBox_OnPreviewTextInput"
                                         FontSize="12" FontWeight="Normal" Padding="2" Margin="0 0 5 0" />
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Column="3">
                                <CheckBox x:Name="SearchCustomerEmailCheckbox"
                                          VerticalContentAlignment="Center"
                                          Click="SearchCustomerEmailCheckbox_OnClick"
                                          FontSize="12" Padding="3">
                                    Email
                                </CheckBox>
                                <TextBox x:Name="SearchCustomerEmailTextBox"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="SearchCustomerEmailTextBox_OnPreviewTextInput"
                                         FontSize="12" FontWeight="Normal" Padding="2" IsEnabled="False" />
                            </StackPanel>
                        </Grid>

                        <!-- Find Customers and New Customer Search Buttons -->
                        <StackPanel Name="SearchCustomerButtonsStackPanel"
                                    Background="AliceBlue"
                                    Orientation="Horizontal" Margin="0 20">
                            <Button Name="FindCustomerButton"
                                    Content="Find"
                                    Click="FindCustomerButton_OnClick"
                                    Background="CornflowerBlue"
                                    IsEnabled="False"
                                    Width="80" Padding="3" Margin="0 0 5 0" />
                            <Button Name="FindNewCustomerButton"
                                    Click="FindNewCustomerButton_OnClick"
                                    Content="New"
                                    Background="CornflowerBlue"
                                    Width="80" Padding="3" Margin="0 0 5 0" />
                            <TextBlock Name="SearchDisplayInfoTextBlock"
                                       FontSize="12" Padding="3" FontWeight="Bold" />
                        </StackPanel>

                        <!-- Display searched customer information grid -->
                        <DataGrid x:Name="SearchCustomerDataGrid"
                                  ItemsSource="{Binding}"
                                  FontWeight="Normal"
                                  Margin="200 10 200 10"
                                  Padding="10" ColumnWidth="*"
                                  VerticalScrollBarVisibility="Visible"
                                  Height="150"
                                  Visibility="Hidden"
                                  AlternatingRowBackground="AliceBlue" BorderThickness="2" />


                        <Grid x:Name="AddCustomerCarInputGrid"
                              Visibility="Hidden"
                              Background="AliceBlue"
                              Margin="0 40 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Car Number -->
                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="12" FontWeight="Bold" Padding="3">Number</TextBlock>
                                <TextBox DockPanel.Dock="Top" x:Name="AddCustomerCarAutoNumberTextBox"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="AddCustomerCarAutoNumberTextBox_OnPreviewTextInput"
                                         FontSize="12" FontWeight="Normal" Padding="2" Margin="0 0 5 0" />
                            </StackPanel>

                            <!-- Chassis Series -->
                            <StackPanel Grid.Column="1">
                                <TextBlock FontSize="12" FontWeight="Bold" Padding="3">Chassis series</TextBlock>
                                <TextBox DockPanel.Dock="Top" x:Name="AddCustomerCarChassisSeriesTextBox"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="AddCustomerCarChassisSeriesTextBox_OnPreviewTextInput"
                                         FontSize="12" FontWeight="Normal" Padding="2" />
                            </StackPanel>
                        </Grid>

                        <!-- Display chassis information grid -->
                        <DataGrid x:Name="DisplayChassisDataGrid"
                                  ItemsSource="{Binding}"
                                  FontWeight="Normal"
                                  Margin="200 20 200 20"
                                  Padding="10" ColumnWidth="*"
                                  VerticalScrollBarVisibility="Visible"
                                  Height="150"
                                  Visibility="Hidden"
                                  AlternatingRowBackground="AliceBlue" BorderThickness="2" />

                        <!-- Add Car and New Car Buttons -->
                        <StackPanel Name="AddCustomerCarButtonsStackPanel"
                                    Background="AliceBlue"
                                    Orientation="Horizontal">
                            <Button Name="AddCustomerCarButton"
                                    DockPanel.Dock="Bottom"
                                    Content="Add"
                                    Click="AddCustomerCarButton_OnClick"
                                    Background="CornflowerBlue"
                                    IsEnabled="False"
                                    Padding="3" Margin="0 0 5 0" />
                            <Button Name="AddNewCustomerCarButton"
                                    DockPanel.Dock="Bottom"
                                    Click="AddNewCustomerCarButton_OnClick"
                                    Content="New"
                                    Background="CornflowerBlue"
                                    Padding="3" Margin="0 0 5 0" />
                            <TextBlock Name="AddCarDisplayInfoTextBlock"
                                       FontSize="12" Padding="3" FontWeight="Bold" />
                        </StackPanel>

                    </StackPanel>

                </Border>
            </TabItem>

            <TabItem Header="Orders" Padding="40 10 40 10" Width="200" Background="DeepSkyBlue" FontWeight="Bold">
                <Border Padding="40">

                    <StackPanel>
                        <Grid Name="OrdersGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button x:Name="AddOrderButton"
                                    Click="AddOrderButton_OnClick"
                                    Padding="10" Margin="0 0 50 0"
                                    Grid.Column="0" Content="Add"
                                    Background="DeepSkyBlue" FontWeight="DemiBold" />
                            <Button x:Name="ViewAllOrdersButton"
                                    Click="ViewAllOrdersButton_OnClick"
                                    Padding="10" Margin="50 0 0 0"
                                    Grid.Column="1" Content="View all"
                                    Background="DeepSkyBlue" FontWeight="DemiBold" />
                        </Grid>

                        <DataGrid Name="OrdersDataGrid"
                                  ItemsSource="{Binding}"
                                  FontWeight="Normal"
                                  Margin="0 50 0 50" Padding="20" ColumnWidth="*"
                                  VerticalScrollBarVisibility="Visible"
                                  Visibility="Hidden"
                                  AlternatingRowBackground="AliceBlue" BorderThickness="2" />

                    </StackPanel>

                </Border>
            </TabItem>

            <TabItem Header="Chassis" Padding="40 10 40 10" Width="200" Background="DarkTurquoise" FontWeight="Bold">
                <Label>Chassis</Label>
            </TabItem>

            <TabItem Header="Details" Padding="40 10 40 10" Width="200" Background="LightBlue" FontWeight="Bold">
                <Label>Details</Label>
            </TabItem>

        </TabControl>
    </Border>

</Window>